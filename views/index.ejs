<% include templates/header.ejs %>
    
<header class="text-center">
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>    
</header>

<div class='form-group row'>
    <input id='search-name' type='text' class='form-control col-sm 3' placeholder="File Name *">
    <input id="search-latitude" type="text" class="form-control col-sm-3" placeholder="Enter Latitude">
    <input id='search-longitude' type="text" class='form-control col-sm-3' placeholder="Enter Longitude">
    <input id='search-distance' type="text" class='form-control col-sm-3' placeholder="Enter distance (in miles)">
</div>

<div class="form-group row">
    <input id='search-term' type="text" class='form-control col-sm-12' placeholder="Enter Search *">
</div>

<div class="row">
    <div class="form-check col-sm-4">
      <label class="form-check-label">
        <input class="form-check-input" type="radio" name="resultType" id="resultType1" value="mixed" checked>
        Mixed
      </label>
    </div>
    <div class="form-check col-sm-4">
      <label class="form-check-label">
        <input class="form-check-input" type="radio" name="resultType" id="resultType2" value="recent">
        Recent
      </label>
    </div>
    <div class="form-check col-sm-4">
      <label class="form-check-label">
        <input class="form-check-input" type="radio" name="resultType" id="resultType3" value="popular">
        Popular
      </label>
    </div>    
</div>



<button class='btn btn-primary' onclick='getTweets()'>Search</button>

<p id='search-warning' style="display: none;">Please enter a file name & search term.</p>
<p id="search-results"></p>

<br><br><hr><br><br>

<h2 class='text-center'>Cloud</h2>
<div class='row'>
    <button class="col-sm-4 btn btn-info" onclick="hashtagCloud()">Hashtags</button>
    <button class="col-sm-4 btn btn-info" onclick="userCloud()">Users</button>
    <button class="col-sm-4 btn btn-info" onclick="textCloud()">Text</button>
</div>

<div id="word-cloud" class="text-center"></div>

<script src="/javascripts/index.js"></script>
    
<% include templates/footer.ejs %>